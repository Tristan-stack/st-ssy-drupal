{# Hérite de la structure de base de votre page.html.twig #}
<div class="page-wrapper">
    <header class="site-header">
        {% include '@custom_theme/components/navigation/main-navigation.html.twig' %}
    </header>

    <main class="new-arrivals-content">
        <div class="products-grid">
            {% for i in 1..4 %}
            <div class="product-card">
                <div class="product-image">
                    <a href="{{ base_path }}/detail-page">
                        <img class="verso" src="{{ base_path ~ directory }}/images/tshirt-verso.png" alt="T-shirt verso">
                        <img class="recto" src="{{ base_path ~ directory }}/images/tshirt-recto.png" alt="T-shirt recto">
                    </a>
                </div>
                <div class="product-info">
                    <p>Dice tee pigment dyed</p>
                    <p class="price">$45</p>
                    <div class="sizes">
                        <button class="size-btn">S</button>
                        <button class="size-btn">M</button>
                        <button class="size-btn">L</button>
                        <button class="size-btn">XL</button>
                        <button class="size-btn">XXL</button>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </main>

    <footer class="footer-wrapper">
        {{ page.footer }}
    </footer>
</div>

<style>
    .page-wrapper {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .new-arrivals-content {
        flex: 1;
        max-width: 1550px;
        margin: 0 auto;
        padding: 20px;
    }

    .products-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: flex-start;
    }

    /* Ajout des styles pour les images */
    .product-image {
        width: 350px;
        /* Largeur fixe pour le conteneur */
        height: 450px;
        /* Hauteur fixe pour le conteneur */
        position: relative;
        overflow: hidden;
    }

    .product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
    }

    .product-image img.recto {
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .product-card {
        display: flex;
        flex-direction: column;
        align-items: self-start;
    }

    .product-card p {
        margin: 0;
        padding: 0;
        margin-top: 4px;
        font-size: 12px;
        color: black;
        font-family: metropolis, sans-serif;
        text-transform: uppercase;
        font-weight: 500;
    }

    .product-card .price {
        margin: 0;
        margin-top: -10px;
        font-size: 12px;
        color: black;
        font-family: metropolis, sans-serif;
        text-transform: uppercase;
        font-weight: 500;
    }

    .product-card:hover .product-image img.recto {
        opacity: 1;
        transition: opacity 0.3s ease;
    }

    .product-card:hover .product-image img.verso {
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .sizes {
        display: flex;
        gap: 10px;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease, visibility 0.3s ease;
    }

    .product-card:hover .sizes {
        opacity: 1;
        visibility: visible;
    }

    .size-btn {
        background: none;
        border: none;
        padding: 5px;
        cursor: pointer;
        font-family: metropolis, sans-serif;
        font-size: 12px;
        color: black;
        text-transform: uppercase;
    }

    .size-btn:hover {
        font-weight: bold;
    }

    /* Hériter des styles existants */
    body {
        background: white !important;
        background-image: none !important;
        margin: 0;
        padding: 0;
    }

    .site-header {
        margin-bottom: -100px !important;
        padding-bottom: 0 !important;
    }

    .footer-wrapper .text-content.clearfix.field.field--name-body.field--type-text-with-summary.field--label-hidden.field__item {
        display: flex;
        width: 100%;
        justify-content: space-between;
        align-items: center;
        padding: 6px;
        background-color: white !important;
        border-top: 1px solid #F5F5F5;
        font-family: metropolis, sans-serif;
        margin-top: -140px !important;
    }

    .footer-wrapper .text-content.clearfix.field.field--name-body.field--type-text-with-summary.field--label-hidden.field__item::after {
        display: none !important;
        content: none !important;
    }

    .footer-wrapper .text-content.clearfix.field.field--name-body.field--type-text-with-summary.field--label-hidden.field__item p {
        margin: 0;
        padding: 0;
        color: black !important;
        margin-right: 10px;
    }

    .footer-wrapper .text-content.clearfix.field.field--name-body.field--type-text-with-summary.field--label-hidden.field__item p:nth-child(2) {
        margin: 0;
        padding: 0;
        font-size: 10px;
        color: #646363 !important;
    }

    .footer-wrapper .text-content.clearfix.field.field--name-body.field--type-text-with-summary.field--label-hidden.field__item p a {
        text-decoration: none;
        color: black !important;
        padding: 0;
        margin: 0;
        font-size: 10px;
        font-weight: normal;
    }

    .footer-wrapper .text-content.clearfix.field.field--name-body.field--type-text-with-summary.field--label-hidden.field__item p a:hover {
        font-weight: bold;
        text-decoration: none !important;
        background: none !important;
    }

    .footer-wrapper {
        margin-top: auto;
        width: 100%;
    }
</style>